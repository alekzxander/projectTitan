<div class="col-sm-9">
        <h4 class="text-center"><small>Dashbord</small></h4>
        <hr>
        <h4 class="text-center">Contenu des Cartes</h4>

        <form action="/dashbord/card" method="post">
            <div class="form-group">
                <label>Titre</label>
                <input type="text" class="form-control" name="titre">
            </div>
            <div class="form-group">
                <label>date aller</label>
                <input type="text" class="form-control" name="date aller">
                <div class="form-group">
                        <label>date retour</label>
                        <input type="text" class="form-control" name="date retour">
                    </div>
                    <div class="form-group">
                        <label>nombre de jour</label>
                        <input type="text" class="form-control" name="nombre de jour">
                    </div>
            </div>
            <div class="form-group">
                    <label>descriptif de la carte</label>
                    <input type="text" class="form-control" name="descriptif">
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Confirmer</button>
        </form>
</div>
 <h1>Supprimer une carte</h1>
<div class="row">
    <% cartes.forEach((carte)=>{ %>

        <div class="col-md-3">
            <div class="carteSupp">
                <h3>
                    <%= carte.name %>
                </h3>
                <a class="btn btn-danger btn-lg" href="/cardSupp/<%= carte._id %>">Supprimer</a>
            </div>
        </div>
        <% })%>
</div>
   

